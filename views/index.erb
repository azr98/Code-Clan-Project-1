<h1>Here are all of your current books</h1>



<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th>Stock</th>
    <th></th>
    <th>Author</th>
  </tr>
  <% for book in @books %>

  <tr>
    <td><a href="/books/<%= book.id %>"><%= book.name %></a></td>
    <td>|</td>
    <td class= "<%= book.stock < 5 ? "low": "high" %>" > <%= book.stock %> </td>
    <td>|</td>
    <td><%= book.author.name %></td>

    <td>
      <form class="" action="/book/<%= book.id %>/delete" method="post">
        <input type="submit" value="Delete book">
      </form>
    </td>

    <td>
      <form class="" action="/book/<%= book.id %>/edit" method="get">
        <input type="submit" value="Edit book">
      </form>
    </td>

    <br>
    <td>|</td>
    <td>Markup <%= (book.cost/book.sell_price)*100 %> % </td>
  </tr>

  <% end %>

</table>
